<Page x:Class="WpfAppKino0410.Pages.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfAppKino0410.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="840"
      Title="UserPage">

    <Grid>
        <StackPanel Margin="30">
            <StackPanel Height="180" HorizontalAlignment="Left" Orientation="Horizontal">
                <Image Width="150" Height="150" Source="https://brilliant24.ru/files/cat/template_01.png"  Margin="15"/>
                <StackPanel>
                    <TextBlock Width="300" FontSize="24" Text="{Binding UserName}" x:Name="UserNameTextBlock"  Margin="10, 20" />
                    <TextBlock Width="300" FontSize="16" Text="{Binding UserName}" x:Name="UserRoleTextBlock"  Margin="5, 20" />
                    <TextBlock Width="300" FontSize="16" Text="{Binding UserName}" x:Name="UserEmailTextBlock"  Margin="5, 20" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
